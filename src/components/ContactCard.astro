---
export interface Props {
  icon: string;
  title: string;
  description: string;
  linkText: string;
  linkUrl: string;
}

const { icon, title, description, linkText, linkUrl } = Astro.props;
---

<div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-200">
  <div class="text-blue-600 text-3xl mb-4">{icon}</div>
  <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <a href={linkUrl} class="text-blue-600 hover:text-blue-700 font-medium">{linkText}</a>
</div> 