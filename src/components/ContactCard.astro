---
export interface Props {
  icon: string;
  title: string;
  description: string;
  linkText: string;
  linkUrl: string;
}

const { icon, title, description, linkText, linkUrl } = Astro.props;
---

<div class="bg-gray-800 p-8 rounded-2xl shadow-sm border border-gray-700">
  <div class="text-blue-400 text-3xl mb-4">{icon}</div>
  <h3 class="text-xl font-semibold text-white mb-2">{title}</h3>
  <p class="text-gray-300 mb-4">{description}</p>
  <a href={linkUrl} class="text-blue-400 hover:text-blue-300 font-medium"
    >{linkText}</a
  >
</div>
