---
export interface Props {
  icon: string;
  title: string;
  skills: Array<{
    name: string;
    description: string;
  }>;
}

const { icon, title, skills } = Astro.props;
---

<div class="bg-gray-800 p-8 rounded-2xl shadow-sm border border-gray-700">
  <div class="text-blue-400 text-4xl mb-4">{icon}</div>
  <h3 class="text-xl font-semibold text-white mb-4">{title}</h3>
  <div class="space-y-4">
    {
      skills.map((skill) => (
        <div class="border-l-2 border-blue-500 pl-4">
          <h4 class="text-white font-medium mb-1">{skill.name}</h4>
          <p class="text-gray-400 text-sm">{skill.description}</p>
        </div>
      ))
    }
  </div>
</div>
