---
export interface Props {
  logo: string;
  title: string;
  description: string;
  tag: string;
  tagColor?: string;
  logoSize?: string;
  logoStyle?: string;
  logoContainer?: string;
}

const { 
  logo, 
  title, 
  description, 
  tag, 
  tagColor = "bg-blue-100 text-blue-800",
  logoSize = "h-16 w-16",
  logoStyle = "",
  logoContainer = ""
} = Astro.props;
---

<div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-200 hover:shadow-lg transition-shadow">
  <div class={`mb-6 ${logoContainer} flex items-center justify-center`} style={logoStyle}>
    <img src={logo} alt={`${title} Logo`} class={`${logoSize} object-contain mx-auto block`}>
  </div>
  <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center">{title}</h3>
  <p class="text-gray-600 text-center mb-4">
    {description}
  </p>
  <div class="flex justify-center">
    <span class={`px-3 py-1 ${tagColor} text-sm rounded-full`}>{tag}</span>
  </div>
</div> 