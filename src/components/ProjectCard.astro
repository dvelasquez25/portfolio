---
export interface Props {
  title: string;
  description: string;
  technologies: string[];
  links?: Array<{
    text: string;
    url: string;
  }>;
  logo: string;
  logoAlt: string;
  logoSize?: string;
  backgroundStyle?: string;
}

const { 
  title, 
  description, 
  technologies, 
  links = [], 
  logo, 
  logoAlt, 
  logoSize = "h-20 w-20",
  backgroundStyle = "bg-white"
} = Astro.props;
---

<div class="bg-gray-50 rounded-2xl overflow-hidden group shadow-sm border border-gray-200 hover:shadow-lg transition-shadow">
  <div class={`h-48 ${backgroundStyle} flex items-center justify-center`}>
    <img src={logo} alt={logoAlt} class={logoSize}>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {technologies.map((tech) => (
        <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full">{tech}</span>
      ))}
    </div>
    {links.length > 0 && (
      <div class="flex space-x-4">
        {links.map((link) => (
          <a href={link.url} class="text-blue-600 hover:text-blue-700 font-medium">{link.text}</a>
        ))}
      </div>
    )}
  </div>
</div> 